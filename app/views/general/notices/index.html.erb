<h1><%= t('list_general_notice') %></h1>

<table>
  <thead>
    <tr>
		<th><%= t('notice_date')%></th>
		<th><%= t('notice_title')%></th>
		<th><%= t('notice_e_date')%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @general_notices.each do |general_notice| %>
      <tr>
        <td><%= general_notice.date %></td>
        <td><%= general_notice.title %></td>
        <td><%= general_notice.e_date %></td>
        <td><%= button_to t('show'), general_notice, method: :get %></td>
        <td><%= button_to t('edit'), edit_general_notice_path(general_notice), method: :get %></td>
        <td><%= button_to t('del'), general_notice, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to t('new_notice'), new_general_notice_path, method: :get %>
