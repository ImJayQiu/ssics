<h1><%= t('listing_adv_advsizes') %></h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Size</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adv_advsizes.each do |adv_advsize| %>
      <tr>
        <td><%= adv_advsize.code %></td>
        <td><%= adv_advsize.advsize %></td>
        <td><%= button_to t('show'), adv_advsize, method: :get %></td>
        <td><%= button_to t('edit'), edit_adv_advsize_path(adv_advsize), method: :get %></td>
        <td><%= button_to t('del'), adv_advsize, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to t('new'), new_adv_advsize_path, method: :get %>
