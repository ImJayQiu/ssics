<h1><%= t('listing_adv_requests') %></h1>


<table>
	<tr>
		<td><%= button_to 'New Request', new_adv_request_path, method: :get %></td>
		<td><%= will_paginate @adv_requests %></td>
	</tr>
</table>

<table>
  <thead>
    <tr>
		<th><%= t('adv_code') %></th>
		<th><%= t('adv_size') %></th>
		<th><%= t('adv_status') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adv_requests.each do |adv_request| %>
      <tr>
        <td><%= adv_request.code %></td>
        <td><%= adv_request.a_size %></td>
        <td><%= adv_request.status %></td>
        <td><%= button_to t('show'), adv_request, method: :get %></td>
        <td><%= button_to t('edit'), edit_adv_request_path(adv_request), method: :get %></td>
        <td><%= button_to t('del'), adv_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<table>
	<tr>
		<td><%= button_to 'New Request', new_adv_request_path, method: :get %></td>
		<td><%= will_paginate @adv_requests %></td>
	</tr>
</table>
