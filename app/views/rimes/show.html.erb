<p id="notice"><%= notice %></p>

<p>
<strong>Date:</strong>
<%= @rime.date %>
</p>


<table>
	<tr>
		<th>Data - 1</th>
		<th>Data - 2</th>
		<th>Data - 3</th>
		<th>Data - 4</th>
		<th>Data - 5</th>
	</tr>
	<tr>
		<td> <%= @rime.data1 %></td>
		<td> <%= @rime.data2 %></td>
		<td> <%= @rime.data3 %></td>
		<td> <%= @rime.data4 %></td>
		<td> <%= @rime.data5 %></td>
	</tr>
</table>
<%= bar_chart [
	["Data-1", @rime.data1],
	["Data-2", @rime.data2],
	["Data-3", @rime.data3],
	["Data-4", @rime.data4],
	["Data-5", @rime.data5]
] %>

<table>
	<tr>
		<th><%= button_to 'Edit', edit_rime_path(@rime), method: :get %></th>
		<th><%= button_to 'Back', rimes_path, method: :get %></th>
	</tr>
</table>
