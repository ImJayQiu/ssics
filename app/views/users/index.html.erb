<h1><%= t('listing_users') %><h1>

<br>
 <table>
	<thead>
		<tr>
			<th><%=t :index %></th>
			<th><%=t :photo %></th>
			<th><%=t :employer_id %></th>
			<th><%=t :name %></th>
			<th><%=t :department %></th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<% @users.each_with_index do |user,i| %>
		<tbody>
			<tr>
				<td><%= i+1 %></td>
				<td><%= image_tag user.avatar.url(:thumb) %></td>
				<td><%= user.employer_id rescue nil %></td>
				<td><%= user.name rescue nil %></td>
				<td><%= user.department rescue nil %></td>
				<td><%= button_to t('show'), user, method: :get %></td>
				<td><%= button_to t('edit'), edit_user_path(user), method: :get %></td>
				<td><%= button_to t('del'), user, data: { confirm: t('are_you_sure') }, method: :delete %></td>
			</tr>
		</tbody>
	<% end %>
</table>

<br>

