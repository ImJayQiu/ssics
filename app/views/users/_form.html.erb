
<%= form_for(@user, :html => { :multipart => true }) do |f| %>
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

			<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<div class="field">
		<%=t :photo %> : <%= f.file_field :avatar %>
	</div>
	<p></p>
	<div class="field">
		<%= f.label t('employer_id') %><br>
		<%= f.text_field :employer_id %>
	</div>
	<p></p>
	<div class="field">
		<%= f.label t('name') %><br>
		<%= f.text_field :name %>
	</div>
	<p></p>
	<div class="field">
		<%= f.label t('department') %><br>
		<%= f.text_field :department %>
	</div>
	<p></p>
	<div class="field">
		<%= f.label t('email') %><br>
		<%= f.text_field :email %>
	</div>
	<p></p>
	<div class="field">
		<%= f.label t('user_role') %><br>
		<%= f.collection_select :role, General::ROLES, :to_s, :humanize %>
	</div>
	<p></p>
	<div class="field">
		<%= f.label t('phone_no') %><br>
		<%= f.text_field :phone_no %>
	</div>
	<p></p>


<div class="actions">
	<%= f.submit t('submit') %>
</div>

<% end %>
