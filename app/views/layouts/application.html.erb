					<li><a href="#">- 版面审核|Layout Verify</a></li>
				</ul>
				</footer>
				</section>

			</div>

		</div>

		<div class="8u skel-cell-important">

			<!-- Content -->
			<div class="content">


				<% if notice %>
					<p class="alert alert-success"><%= notice %></p>
				<% end %>
				<% if alert %>
					<p class="alert alert-danger"><%= alert %></p>
				<% end %>

				<%= yield %>

			</div>

		</div>
	</div>					
