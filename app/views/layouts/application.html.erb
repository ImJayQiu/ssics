						<li>-<%= link_to t('issue_areas_setting'), issue_areas_path %></li>
					<% end %>
					<% if can? :manage, :issue_customer_types  %>
						<li>-<%= link_to t('issue_customer_types'), issue_types_path %></li>
					<% end %>
