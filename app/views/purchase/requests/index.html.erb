<h1>Listing purchase_requests</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>P name</th>
      <th>Quantity</th>
      <th>Unit</th>
      <th>Request date</th>
      <th>Estimate price</th>
      <th>Submit by</th>
      <th>P confirm</th>
      <th>P plan</th>
      <th>P location</th>
      <th>P net price</th>
      <th>P vat</th>
      <th>P total price</th>
      <th>W location</th>
      <th>Operator</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_requests.each do |purchase_request| %>
      <tr>
        <td><%= purchase_request.code %></td>
        <td><%= purchase_request.p_name %></td>
        <td><%= purchase_request.quantity %></td>
        <td><%= purchase_request.unit %></td>
        <td><%= purchase_request.request_date %></td>
        <td><%= purchase_request.estimate_price %></td>
        <td><%= purchase_request.submit_by %></td>
        <td><%= purchase_request.p_confirm %></td>
        <td><%= purchase_request.p_plan %></td>
        <td><%= purchase_request.p_location %></td>
        <td><%= purchase_request.p_net_price %></td>
        <td><%= purchase_request.p_vat %></td>
        <td><%= purchase_request.p_total_price %></td>
        <td><%= purchase_request.w_location %></td>
        <td><%= purchase_request.operator %></td>
        <td><%= link_to 'Show', purchase_request %></td>
        <td><%= link_to 'Edit', edit_purchase_request_path(purchase_request) %></td>
        <td><%= link_to 'Destroy', purchase_request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

