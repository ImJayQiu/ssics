
<%= pie_chart  @issue_customers.group(:area).count, 
	library: {
	title: {
		text: t('issue_customers_distribution_by_area')
	},
	subtitle: {
		text: t('total_quantity') + " : " + @total_count.to_s
	},
	plotOptions: {
		pie: {
			size:'100%',
			allowPointSelect: true,
			cursor: 'pointer',
			dataLabels: {
				enabled: true,
				format: '<b>{point.name}</b>: {point.percentage:.1f} %'
			}
		}
	}

}
%>
