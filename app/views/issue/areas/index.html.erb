<h1><%= t('listing_issue_areas') %></h1>

<table>
	<thead>
		<tr>
			<th><%= t('area_code') %></th>
			<th><%= t('area_name') %></th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<% @issue_areas.each do |issue_area| %>
		<tbody>
			<tr>
				<td><%= issue_area.code %></td>
				<td><%= issue_area.area %></td>
				<td><%= button_to t('show'), issue_area, method: :get %></td>
				<td><%= button_to t('edit'), edit_issue_area_path(issue_area), method: :get %></td>
				<td><%= button_to t('del'), issue_area, method: :delete, data: { confirm: t('are_you_sure') } %></td>
			</tr>
		</tbody>
	<% end %>
</table>

<br>

<%= button_to t('new_area'), new_issue_area_path, method: :get %>
