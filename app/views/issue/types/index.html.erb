<h1><%= t('listing_issue_types') %></h1>

<table>
  <thead>
    <tr>
		<th><%= t('issue_customer_type_code')  %></th>
		<th><%= t('issue_customer_type')  %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_types.each do |issue_type| %>
      <tr>
        <td><%= issue_type.code %></td>
        <td><%= issue_type.c_type %></td>
        <td><%= button_to t('show'), issue_type, method: :get %></td>
        <td><%= button_to t('edit'), edit_issue_type_path(issue_type), method: :get %></td>
        <td><%= button_to t('del'), issue_type, method: :delete, data: { confirm: t('are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to t('new_issue_type'), new_issue_type_path, method: :get %>
