<% data = @issue_customers.group(:province) %>
<% height = (data.to_a.size).to_i * 20 + 120 %>

<%= bar_chart data.count, 
	library: {
	title: {
		text: t('issue_customers_distribution_by_provinces')
	},
	chart:{
		height: height
	},
	plotOptions: {
		bar: {
			allowPointSelect: true,
			cursor: 'pointer',
			dataLabels: {
				enabled: true
				#	format: '<b>{point.name}</b>: {point.percentage:.1f} %'
			}
		}
	}
}
%>
